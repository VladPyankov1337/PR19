<UserControl x:Class="KINO_Pyankov.Pages.Afisha.Items.item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KINO_Pyankov.Pages.Afisha.Items"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100px"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image Width="80" Height="80" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10" Source="/Images/ic-afisha.png"/>
        <Label Content="Кинотеатр:" Grid.Column="1" VerticalAlignment="Top" Margin="10"/>
        <TextBox x:Name="kinoteatrs" Height="25" Grid.Column="1" Margin="10,36,10,0" VerticalAlignment="Top" IsEnabled="False"/>
        <Label Content="Наименование:" Grid.Column="1" Margin="10,66,10,0" Height="26" VerticalAlignment="Top"/>
        <TextBox x:Name="name" Height="25" Grid.Column="1" Margin="10,92,10,0" VerticalAlignment="Top" IsEnabled="False"/>
        <Label Content="Дата:" Grid.Column="2" VerticalAlignment="Top" Margin="10, 10, 10,0"/>
        <DatePicker x:Name="date" Height="25" Grid.Column="2" Margin="10,36,78,0" VerticalAlignment="Top" RenderTransformOrigin="0.193,0.56" IsEnabled="False"/>
        <TextBox x:Name="time" Height="25" Grid.Column="2" Margin="0,36,10,0" VerticalAlignment="Top" IsEnabled="False" HorizontalAlignment="Right" Width="62" RenderTransformOrigin="0.384,0.427"/>
        <Label Content="Стоимость:" Grid.Column="2" VerticalAlignment="Top" Margin="10,64,10,0"/>
        <TextBox x:Name="price" Height="25" Grid.Column="2" Margin="10,92,10,0" VerticalAlignment="Top" IsEnabled="False"/>
        <Button Click="EditRecord" Content="Изменить" Height="25" Margin="0,97,0,0" HorizontalAlignment="Center" Width="80" Background="#FF73E618" Foreground="White" BorderBrush="#FF73E618" VerticalAlignment="Top"/>
        <Button Click="DeleteRecord"  Content="Удалить" Height="25" Margin="0,127,0,0" HorizontalAlignment="Center" Width="80" Background="#FFE68918" Foreground="White" BorderBrush="#FFE68918" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
