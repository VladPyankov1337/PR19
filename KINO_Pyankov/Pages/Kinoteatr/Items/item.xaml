<UserControl x:Class="KINO_Pyankov.Pages.Kinoteatr.Items.item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KINO_Pyankov.Pages.Kinoteatr.Items"
             mc:Ignorable="d" 
             d:DesignHeight="213" d:DesignWidth="452">
    <Grid Margin="10" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100px"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image Width="80" Height="80" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10" Source="/Images/ic-kino.png"/>
        <Label Content="Наименование:" Grid.Column="1" Margin="10,10,10,0" Height="26" VerticalAlignment="Top"/>
        <TextBox x:Name="name" Height="25" Grid.Column="1" Margin="10,36,10,0" IsEnabled="False" VerticalAlignment="Top"/>
        <Label Content="Количество залов:" Grid.Column="1" Margin="10,66,10,0" Height="26" VerticalAlignment="Top"/>
        <TextBox x:Name="countZal" Height="25" Grid.Column="1" Margin="10,102,10,0" IsEnabled="False" VerticalAlignment="Top"/>
        <Label Content="Количество:" Grid.Column="2" Margin="10,10,10,0" Height="26" VerticalAlignment="Top"/>
        <TextBox x:Name="count" Height="25" Grid.Column="2" Margin="10,36,10,0" IsEnabled="False" VerticalAlignment="Top"/>
        <Button Click="EditRecord" Content="Изменить" Height="25" Margin="0,97,0,0" HorizontalAlignment="Center" Width="80" Background="#FF73E618" Foreground="White" BorderBrush="#FF73E618" VerticalAlignment="Top"/>
        <Button Click="DeleteRecord"  Content="Удалить" Height="25" Margin="0,127,0,0" HorizontalAlignment="Center" Width="80" Background="#FFE68918" Foreground="White" BorderBrush="#FFE68918" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
